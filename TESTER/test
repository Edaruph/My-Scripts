local plr = game:GetService("Players").LocalPlayer
local char = plr.Character
local rleg = char["RightBoot"]
local lleg = char["LeftBoot"]
local camera = game:GetService("Workspace").CurrentCamera
local studs = 5

local props = {
    size = Vector3.new(1.75, 1.75, 1.75),
    shape = "Ball",
    material = "SmoothPlastic"
}

local function findBalls()
    local table = {}
    for _, i in pairs(workspace:GetDescendants()) do
        if i:IsA("BasePart") then
            if i.Size == props.size and i.Material == Enum.Material[props.material] then
                table.insert(table, i)
            end
        end
    end
    return table
end

local balls = findBalls()
for _, ball in ipairs(balls) do
    if (ball.Position - rleg.Position).Magnitude <= studs then
        firetouchinterest(ball, rleg, 0)
        firetouchinterest(ball, rleg, 1)
    end
    if (ball.Position - lleg.Position).Magnitude <= studs then
        firetouchinterest(ball, lleg, 0)
        firetouchinterest(ball, lleg, 1)
    end
end



