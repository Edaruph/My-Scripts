local plr = game:GetService("Players").LocalPlayer
local char = plr.Character or plr.CharacterAdded:Wait()
local rleg = char:FindFirstChild("RightBoot")
local lleg = char:FindFirstChild("LeftBoot")
local camera = game:GetService("Workspace").CurrentCamera
local studs = 5

local props = {
    size = Vector3.new(1.75, 1.75, 1.75),
    shape = "Ball",
    material = "SmoothPlastic"
}

local function findBalls()
    local foundBalls = {}
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") then
            if (obj.Size - props.size).Magnitude < 0.01 and obj.Material == Enum.Material[props.material] then
                table.insert(foundBalls, obj)
            end
        end
    end
    return foundBalls
end

local balls = findBalls()
for _, ball in ipairs(balls) do
    if (ball.Position - rleg.Position).Magnitude <= studs then
        ball:TouchEnded(rleg)
        ball:TouchStarted(rleg)
    end
    if (ball.Position - lleg.Position).Magnitude <= studs then
        ball:TouchEnded(lleg)
        ball:TouchStarted(lleg)
    end
end
