

local Config = {
    Higlight = {
        Chest = true,
        Color = Color3.fromRGB(255, 0, 255)
    }
}

local chestenabled = Config.Higlight.Chest
local chestcolor = Config.Higlight.Color

function CreateHiglight(part)
    if chestenabled then
        if part:FindFirstChild("Frame") and part:FindFirstChild("Part") then
          local chestpart = part:FindFirstChild("Part")
          repeat wait() until chestpart
          local ch = Instance.new("Highlight")
          ch.Name = "Santo"
          ch.Adornee = v
          ch.Parent = chestpart
          ch.OutlineColor = chestcolor
          ch.OutlineTransparency = 0
          ch.FillColor = chestcolor
          ch.FillTransparency = 0.5
        end
    end
end

for _, i in pairs(workspace:GetChildren()) do
    CreateHiglight(i)
end
